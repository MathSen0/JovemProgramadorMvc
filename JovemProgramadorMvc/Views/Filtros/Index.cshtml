@model AlunoModel

<form asp-controller="Aluno" asp-action="Index" method="post">
    <div class="mb-3">
        <label for="Name" class="form-label">Filtrar por nome:</label>
        <input type="text" asp-for="Nome" class="form-control col-4" /><br />
    </div>
  
    <div class="mb-3">
        <label for="Idade" class="col-form-label">Idade será</label>
            <label><input type="number" asp-for="Idade" class="form-control col-3" id="InputFiltroIdade"></label> anos<br />

        <label>Qual filtro deseja aplicar a idade?</label><br />
        <input type="radio" name="Idade" value="maior" /> Maior que<br />
        <input type="radio" name="Idade" value="igual" /> igual<br />
        <input type="radio" name="Idade" value="menor" /> Menor que<br />
    </div>
   
    <div class="mb-3">
        <label for="Name" class="form-label">Filtrar por contato:</label>
        <input type="text" asp-for="Contato" class="form-control col-3" />
    </div>
   
    <div class="text-left">
        <button type="submit" class="btn btn-primary">Filtrar</button>
    </div>
</form>

