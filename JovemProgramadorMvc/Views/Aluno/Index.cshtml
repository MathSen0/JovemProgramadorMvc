@model List<AlunoModel>
@if (ViewData["Mensagem"] != null)
{
    <div class="alert-danger text-center">
        @ViewData["Mensagem"]
    </div>

}

@if (TempData["Mensagem2"] != null)
{
    <div class="badge-success text-center">
        @TempData["Mensagem2"]
    </div>
}

@if (TempData["Mensagem3"] != null)
{
    <div class="badge-success text-center">
        @TempData["Mensagem3"]
    </div>
}

@if (TempData["Mensagem4"] != null)
{
    <div class="badge-success text-center">
        @TempData["Mensagem4"]
    </div>
}


<div class="text-left">
    <div>
        <h1>Dados dos Alunos</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">Contato</th>
                <th scope="col">E-mail</th>
                <th scope="col">CEP</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (AlunoModel aluno in Model)
                {
                    <tr>
                        <td> @aluno.Id</td>
                        <td> @aluno.Nome</td>
                        <td> @aluno.Idade anos</td>
                        <td> @aluno.Contato</td>
                        <td> @aluno.Email</td>
                        <td> @aluno.Cep</td>
                        <td>
                            <div>
                                <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="Buscarcep" asp-route-cep="@aluno.Cep">Endereço</a>
                            </div>
                        </td>
                        <td>
                            <div>
                                <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="Editar" asp-route-Id="@aluno.Id">Editar</a>
                            </div>
                        </td>
                        <td>
                            <div>
                                <a class="btn btn-danger" type="button" asp-controller="Aluno" asp-action="Excluir" asp-route-Id="@aluno.Id">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="text-center">
        <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="Adicionar">Adicionar novo Aluno</a>
        <a class="btn btn-primary" type="button" asp-controller="Filtro" asp-action="Index">Filtro</a>
        <a class="btn btn-primary" type="button" asp-controller="Home" asp-action="Index">Voltar</a>
    </div>
</div>